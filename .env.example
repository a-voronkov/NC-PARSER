# Application
APP_NAME=document-service
ENV=development
PORT=8000

# Storage
DATA_ROOT=/data
UPLOADS_DIR=/data/uploads
ARTIFACTS_DIR=/data/artifacts
RESULTS_DIR=/data/results
RETENTION_DAYS=3
MAX_UPLOAD_CHUNK_MB=50

# Queue / Workers
QUEUE_BACKEND=redis
REDIS_URL=redis://redis:6379/0
WORKER_CONCURRENCY=1

# OCR
OCR_AGENT=PaddleOCR
OCR_LANGUAGES=ru,en
OCR_TIMEOUT_S=120

# LLM
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct
LLM_QUANTIZATION=int4
LLM_MAX_CONTEXT_TOKENS=33000
LLM_TEMPERATURE=0.1

# Vision Captioning
CAPTION_BACKEND=blip2
QWEN_VL_MODEL=Qwen/Qwen2-VL-7B-Instruct

# Donut
DONUT_ENABLED=true
DONUT_INVOICE_MODEL=naver-clova-ix/donut-base-finetuned-docvqa

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9000

# Security
ALLOW_EXTERNAL_NETWORK=false

# Note: Copy this file to .env and adjust values for your environment.
