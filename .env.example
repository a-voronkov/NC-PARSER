# Application
APP_NAME=nc-parser
APP_ENV=dev
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8080
HTTP_MAX_BODY_MB=200
CHUNK_SIZE_MB=5
ALLOW_DELETE=true
AUTH_DISABLE=true

# Data directories (mounted inside container)
DATA_DIR=/data
UPLOADS_DIR=/data/uploads
ARTIFACTS_DIR=/data/artifacts
RESULTS_DIR=/data/results
TTL_DAYS=7

# Queue / Worker
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
MAX_CONCURRENCY=2

# OCR
OCR_AGENT=paddle        # paddle | tesseract
OCR_GPU=true
OCR_GPU_DEVICE=0
OCR_LANGS=en,ru
OCR_MAX_PAGES=200

# Captioning
CAPTIONING_ENABLE=false
CAPTION_BACKEND=blip2   # blip2 | qwen-vl

# Donut
DONUT_ENABLE=false
DONUT_MODEL=naver-clova-ix/donut-base

# LLM (optional via vLLM or local pipeline)
LLM_ENABLE=false
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct
VLLM_PORT=8000

# Observability
METRICS_ENABLE=true
OTEL_ENABLE=false
SENTRY_DSN=

# Misc
STARTUP_DOWNLOAD_MODELS=false
