# Domain configuration
NEXTCLOUD_DOMAIN=ncrag.voronkov.club
LETSENCRYPT_EMAIL=admin@voronkov.club

# Nextcloud Admin Configuration
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_secure_frontend_password_here

# Nextcloud URLs and domains
NEXTCLOUD_URL=https://ncrag.voronkov.club
NEXTCLOUD_TRUSTED_DOMAINS=ncrag.voronkov.club

# API Configuration (different from admin password)
NEXTCLOUD_APP_USER=admin
NEXTCLOUD_APP_PASSWORD=your_api_token_here

# Legacy compatibility (should match NEXTCLOUD_ADMIN_PASSWORD)
NEXTCLOUD_PASS=your_secure_frontend_password_here

# Database Configuration
POSTGRES_DB=nextcloud
POSTGRES_USER=nextcloud
POSTGRES_PASSWORD=secure_db_password_here

# Redis Configuration (optional password)
REDIS_PASSWORD=

# Application Services
PARSER_URL=http://mock-parser:8080
PARSER_SECRET=changeme

# Webhooks Configuration
PUBLIC_BASE_URL=https://ncrag.voronkov.club
WEBHOOK_SECRET=your_webhook_secret_here

# Node-RED Configuration
TENANT_DEFAULT=default

# Embeddings (if using)
OLLAMA_URL=http://ollama:11434
OLLAMA_BASIC_AUTH=user:pass
OLLAMA_EMBED_MODEL=nomic-embed-text

# RabbitMQ (if using)
RABBITMQ_URL=amqp://user:pass@rabbitmq:5672/

# Qdrant (if using)
QDRANT_URL=http://qdrant:6333

# IMPORTANT NOTES:
# - NEXTCLOUD_ADMIN_PASSWORD: Password for web interface login
# - NEXTCLOUD_APP_PASSWORD: API token for applications (different from web login)
# - NEXTCLOUD_PASS: Legacy variable, should match NEXTCLOUD_ADMIN_PASSWORD
# - All passwords should be strong and unique
# - Change all default passwords before production use